<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']" position="inside">
                <h2>Product Average Consumption</h2>
                <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="product_average_consumption_order_dates"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="product_average_consumption_order_dates" class="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="product_average_consumption_states"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="product_average_consumption_states" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="product_average_consumption_location_ids"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="product_average_consumption_location_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>